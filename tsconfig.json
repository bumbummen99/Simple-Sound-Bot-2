{
    "compilerOptions": {
        "target": "es2022",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "outDir": "dist",
        "strictNullChecks": true
    },
    "include": [
        "src/"
    ]
}