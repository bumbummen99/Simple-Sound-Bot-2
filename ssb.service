[Unit]
Description=Simple Sound Bot 2
PartOf=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=true
WorkingDirectory=/home/ssb/Simple-Sound-Bot-2
ExecStart=$(which docker) compose -f docker-compose.yml -f docker-compose.prod.yml up -d --remove-orphans
ExecStop=$(which docker) compose down

[Install]
WantedBy=multi-user.target